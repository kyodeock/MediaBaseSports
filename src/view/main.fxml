<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox stylesheets="/view/mainStyle.css" fx:controller="control.MainController" xmlns:fx="http://javafx.com/fxml" prefWidth="500.0" prefHeight="300.0">
	<children>
		<HBox>
			<padding>
				<Insets top="10.0" left="10.0"/>
			</padding>
			<children>
				<Label fx:id="lbDiv" />
			</children>
		</HBox>
		<HBox alignment="CENTER">
			<padding>
				<Insets bottom="10.0" />
			</padding>
			<spacing>20.0</spacing>
			<children>
				<ImageView fx:id="imgLogo">
					<image>
						<Image url="/view/backgroundImg.png" />
					</image>
				</ImageView>
			</children>
		</HBox>
		<HBox alignment="CENTER">
			<padding>
				<Insets top="10.0" right="10.0" left="10.0" bottom="10.0" />
			</padding>
			<spacing>30.0</spacing>
			<children>
               <Button fx:id="btnClub">
				<graphic>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ImageView fx:id="imgClub">
                           <image>
                              <Image url="/view/Club.png" />
                           </image>
                        </ImageView>
                        <Label text="구단 정보" />
                     </children>
                  </VBox>
               </graphic></Button>
				<Button fx:id="btnPlayer">
				<graphic>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ImageView fx:id="imgPlayer">
                           <image>
                              <Image url="/view/Player.png" />
                           </image>
                        </ImageView>
                        <Label text="선수 정보" />
                     </children>
                  </VBox>
               </graphic></Button>
			</children>
		</HBox>
		<HBox alignment="CENTER">
			<padding>
				<Insets top="10.0" right="10.0" left="10.0" bottom="10.0" />
			</padding>
			<spacing>30.0</spacing>
			<children>
				<Button fx:id="btnContract">
				<graphic>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ImageView fx:id="imgContract">
                           <image>
                              <Image url="/view/Contract.png" />
                           </image>
                        </ImageView>
                        <Label text="협상현황" />
                     </children>
                  </VBox>
               </graphic></Button>
				<Button fx:id="btnProfitSpending">
				<graphic>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ImageView fx:id="imgProfit">
                           <image>
                              <Image url="/view/Profit.png" />
                           </image>
                        </ImageView>
                        <Label text="수수료 수익" />
                     </children>
                  </VBox>
               </graphic></Button>
				<Button fx:id="btnExit">
				<graphic>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ImageView fx:id="imgExit">
                           <image>
                              <Image url="/view/Exit.png" />
                           </image>
                        </ImageView>
                        <Label text="뒤로가기" />
                     </children>
                  </VBox>
               </graphic></Button>
			</children>
		</HBox>
	</children>
</VBox>

