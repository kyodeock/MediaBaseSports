<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" prefHeight="350.0" prefWidth="600.0"
	style="-fx-background-color: white;"
	xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/8.0.171">
	<children>
		<ImageView fitHeight="150.0" fitWidth="200.0"
			pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="@backgroundImg.png" />
			</image>
		</ImageView>
		<HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0"
			spacing="15.0">
			<children>
				<Label alignment="CENTER" text="사용자 이메일 : "
					textAlignment="CENTER" />
				<TextField fx:id="txtEmail" />
				<ComboBox fx:id="cbEmail" prefWidth="150.0" />
				<Button fx:id="btnMail" mnemonicParsing="false"
					style="-fx-background-color: white;">
					<graphic>
						<HBox alignment="CENTER" prefHeight="23.0" prefWidth="80.0"
							spacing="5.0">
							<children>
								<ImageView fitHeight="23.0" fitWidth="50.0"
									pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@email-letter-inbox-send-128.png" />
									</image>
								</ImageView>
								<Label lineSpacing="5.0" text="메일전송">
									<font>
										<Font size="10.0" />
									</font>
								</Label>
							</children>
						</HBox>
					</graphic>
				</Button>
			</children>
		</HBox>
		<HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0"
			spacing="15.0">
			<children>
				<Label alignment="CENTER" text="인증코드 : "
					textAlignment="CENTER" />
				<TextField fx:id="txtCode" />
				<Button fx:id="btnCode" mnemonicParsing="false"
					prefWidth="80.0" style="-fx-background-color: white;">
					<graphic>
						<HBox alignment="CENTER" prefHeight="23.0" prefWidth="80.0"
							spacing="5.0">
							<children>
								<ImageView fitHeight="23.0" fitWidth="50.0"
									pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@Check.png" />
									</image>
								</ImageView>
								<Label text="인증">
									<font>
										<Font size="10.0" />
									</font>
								</Label>
							</children>
						</HBox>
					</graphic>
				</Button>
			</children>
		</HBox>
		<HBox alignment="CENTER">
			<spacing>15.0</spacing>
			<children>
				<Label alignment="CENTER" text="ID : " textAlignment="CENTER" />
				<TextField fx:id="txtID" />
				<Label alignment="CENTER" text="PW : " textAlignment="CENTER" />
				<TextField fx:id="txtPW" />
			</children>
		</HBox>
		<HBox alignment="CENTER" prefHeight="80.0" prefWidth="200.0"
			spacing="15.0">
			<children>
				<Button fx:id="btnCancel" mnemonicParsing="false"
					style="-fx-background-color: white;">
					<graphic>
						<HBox alignment="CENTER" prefHeight="100.0" prefWidth="80.0">
							<children>
								<ImageView fitHeight="23.0" fitWidth="50.0"
									pickOnBounds="true" preserveRatio="true">
									<image>
										<Image url="@Exit.png" />
									</image>
								</ImageView>
								<Label text="뒤로가기" />
							</children>
						</HBox>
					</graphic>
				</Button>
			</children>
		</HBox>
	</children>
</VBox>
